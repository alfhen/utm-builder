{
  "version": 1,
  "globalRules": {
    "requiredParams": ["utm_source", "utm_medium", "utm_campaign"],
    "lowercaseOnly": true,
    "allowedValuePattern": "^[a-z0-9_]+$",
    "disallowSpaces": true,
    "disallowMultipleQuestionMarks": true,
    "requireAnyUtm": true,
    "utmContentGuidance": {
      "description": "utm_content should be used to distinguish creatives, CTAs, or placements.",
      "examples": [
        "video_1",
        "story_ad_top",
        "carousel_3",
        "cta_shop_now",
        "header_banner",
        "footer_cta"
      ]
    },
    "utmTermGuidance": {
      "description": "utm_term should be used for keywords (paid search) or audience/targeting info (paid social).",
      "examples": [
        "retarget_7d",
        "lookalike_1pct",
        "interests_knitting",
        "keyword_knitting_yarn"
      ]
    }
  },
